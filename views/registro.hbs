<section id="registro">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-4 offset-lg-4 col-md-8 offset-md-2 cont-reg">
                <h2>Registro de usuario</h2>
                <a href="login" class="loginlink">¿ Ya estás registrado ?</a>
                <form action="/registrook" method="post" class="formReg" onsubmit="comprobar(event)">
                    <div class="form-row justify-content-md-center">
                        <div class="form-group col-md-8 col-8">
                            {{#if errorUsuario}}
                                <p class="alert alert-danger"><strong>Error !</strong> El usuario ya existe.</p>
                            {{/if}}
                            <input type="text" class="form-control" name="usuario" id="registUsuario" placeholder="Usuario" required>
                        </div>
                    </div>
                    <div class="form-row justify-content-md-center">
                        <div class="form-group col-md-8 col-8">
                            {{#if errorEmail}}
                                <p class="alert alert-danger"><strong>Error !</strong> El email ya existe.</p>
                            {{/if}}
                            <input type="email" class="form-control" name="email" id="registEmail" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="form-row justify-content-md-center">
                        <div class="form-group col-md-5 col-8">
                            <input type="password" class="form-control" name="password" id="registPassword" placeholder="Contraseña" required>
                        </div>
                        <div class="form-group col-md-5 col-8">
                            <input type="password" class="form-control" id="registPassword2" placeholder=" Repite Contraseña" required>
                        </div>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1" required>
                        <label class="form-check-label" for="defaultCheck1">
                            Acepto términos de condiciones
                        </label>
                    </div>
                    <br>
                    <div class="form-row justify-content-md-center">
                        <div class="form-group col-md-6">
                            <button type="submit" class="btn btn-warning btn-lg" id="submitRegistro">Identificarse</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>